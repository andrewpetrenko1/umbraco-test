@model TestUmbraco.Models.ContactFormModel
@using TestUmbraco.Controllers


<div class="col-5 pt-5">
  @if (Request.QueryString["submit"] == "true")
  {
    <h1>Submited</h1>
  }
  else
  {
    using (Html.BeginUmbracoForm<FormController>(nameof(FormController.Submit)))
    {
      <div class="form-group">
        <label for="name">
          <h6>Name</h6>
        </label>
        <input class="form-control" type="text" name="Name" id="name" placeholder="Enter your name" />
        @if (@Html.ValidationMessage("Name") != null)
        {
          <div class="mt-2 alert alert-danger">
            @Html.ValidationMessage("Name")
          </div>
        }
      </div>
      <div class="form-group">
        <label for="mail">
          <h6>Email</h6>
        </label>
        <input class="form-control" type="email" id="mail" name="Email" placeholder="Enter email" />
        @if (@Html.ValidationMessage("Email") != null)
        {
          <div class="mt-2 alert alert-danger">
            @Html.ValidationMessage("Email")
          </div>
        }
        </div>
      <div class="form-group">
        <label for="msg">
          <h6>Message</h6>
        </label>
        <textarea class="form-control" rows="5" id="msg" name="message" placeholder="Message"></textarea>
        @if (@Html.ValidationMessage("Message") != null)
        {
          <div class="mt-2 alert alert-danger">
            @Html.ValidationMessage("Message")
          </div>
        }
      </div>
      <input type="hidden" value="@ViewBag.EmailTo" name="EmailTo"/>
      <input class="btn btn-primary" type="submit" value="Submit" />

    }
  }
</div>

